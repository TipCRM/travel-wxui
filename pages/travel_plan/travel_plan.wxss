/* pages/travel_plan/travel_plan.wxss */
@import "/pages/index/index.wxss";
.travel_plan_map{
  width: 100%;
  height: 200px;
}

.travel_plan_items{
  margin-top: 8px;
  border-top: 1px solid #f8f8f8;
}
.travel_plan_item{
  border-bottom: 1px solid #f8f8f8;
}
.travel_plan_item_close{
  padding-top: 8px;
  text-align: right;
  padding-right: 4px;
}

.travel_plan_item_address{
  display: flex;
  flex-direction: row;
  padding: 8px 0;
}

.travel_plan_item_address view{
  flex: 5;
  text-align: center;
}

.travel_plan_item_plan{
  padding: 0 16px 8px 16px;
}