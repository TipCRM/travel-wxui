/* pages/travel_record/travel_record.wxss */
.article_content{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 8px 0;
  margin-bottom: 24px;
}

.article_content image{
  width: 100%;
  padding: 8px 0;
}

.article_operation{
  padding: 8px 0;
  border-bottom: 1px solid #f8f8f8;
  display: flex;
  flex-direction: row;
}

.article_operation_item{
  margin: 0 4px;
  border-radius: 18px;
  border: 1px solid #aaa;
  flex: 1;
  text-align: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
  height: 36px;
  font-size: 13px;
}